{
  "name": "article-to-flashcards-extension",
  "version": "1.0.0",
  "description": "Convert any webpage into flashcards automatically",
  "type": "module",
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs');['manifest.json','options.html','popup.html','content-ui.html'].forEach(f=>fs.copyFileSync(f,'dist/'+f));fs.mkdirSync('dist/icons',{recursive:true});fs.readdirSync('icons').forEach(f=>fs.copyFileSync('icons/'+f,'dist/icons/'+f))\"",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.5"
  }
}
